    <div class="mb-3">
        <label for="age" class="form-label">年紀</label>
        <input type="text" class="form-control" id="age" name="age">
    </div>
    <div class="mb-3">
        <label for="formFile" class="form-label">照片</label>
        <input class="form-control" type="file" id="formFile" name="photo">
